<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
	<TextView android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" android:text="TextView"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" android:id="@+id/status_name_text" />
	<TextView android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="TextView" android:layout_height="wrap_content"
		android:layout_below="@+id/status_name_text" android:layout_width="match_parent"
		android:id="@+id/status_message_text" />
	<TextView android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content" android:text="TextView"
		android:layout_height="wrap_content" android:layout_alignParentRight="true"
		android:id="@+id/status_date_text" />

</RelativeLayout>
